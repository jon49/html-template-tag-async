{
    "compilerOptions": {
        "noImplicitAny": false
    },
    "lint": {
        "include": [ "src/" ],
        "exclude": [ "lib/" ],
        "no-explicit-any": false
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["src/"],
        "exclude": ["lib/"]
    },
    "test": {
        include: ["tests/"]
    }
}
